/* components/article-list-card/article-list-card.wxss */
.page-container {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-bottom: 10px;
}

.article-card {
  padding: 15px 12px;
}

.user-info {
  display: flex;
  align-items: center;
  padding-bottom: 15px;
}

.avatar {
  width: 35px;
  height: 35px;
  padding-right: 5px;
}

.cover {
  width: 100%;
  height: 143px;
}

.title {
  font-size: 24px;
  padding: 10px 0;
}

.description {
  font-size: 18px;
  color: #666666;
  padding-bottom: 20px;
}

.action-container {
  display: flex;
  justify-content: space-between;
}

.action {
  display: flex;
  align-items: center;
}

.icon {
  width: 25px;
  height: 25px;
  padding-right: 5px;
}